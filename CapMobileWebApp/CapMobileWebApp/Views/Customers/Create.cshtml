                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ResAddress" class="control-label"></label>
                                        <input asp-for="ResAddress" class="form-control" />
                                        <span asp-validation-for="ResAddress" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Pincode" class="control-label"></label>
                                        <input asp-for="Pincode" class="form-control" />
                                        <span asp-validation-for="Pincode" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Mstate" class="control-label"></label>
                                        <input asp-for="Mstate" class="form-control" />
                                        <span asp-validation-for="Mstate" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
