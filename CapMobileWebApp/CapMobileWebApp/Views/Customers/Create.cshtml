                                        <input asp-for="CustomerDrivingLicNo" class="form-control" />
                                        <span asp-validation-for="CustomerDrivingLicNo" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="CustomerEducation" class="control-label"></label>
                                        <input asp-for="CustomerEducation" class="form-control" />
                                        <span asp-validation-for="CustomerEducation" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="CustomerCategory" class="control-label"></label>
                                        <select asp-for="CustomerCategory" class="form-control">
